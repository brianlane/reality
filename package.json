{
  "name": "reality",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=24.0.0"
  },
  "overrides": {
    "hono": "^4.7.0",
    "lodash": "^4.17.21"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prebuild": "prisma generate",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check . --ignore-path .gitignore",
    "bundle:check": "node scripts/check-bundle-size.mjs",
    "test:e2e": "env -u NO_COLOR FORCE_COLOR=0 playwright test",
    "db:dev": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:seed": "npx prisma db seed",
    "db:full": "concurrently \"npm run db:dev\" \"npm run db:studio\"",
    "dev:all": "concurrently \"npm run db:dev\" \"npm run db:studio\" \"npm run dev\" --names \"DB,STUDIO,NEXT\" -c \"blue,magenta,green\"",
    "db:reset": "npx prisma migrate reset",
    "seed:questions": "npx tsx scripts/seed-questions.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.1",
    "@floating-ui/dom": "^1.7.5",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.93.3",
    "@tiptap/react": "^3.18.0",
    "@tiptap/starter-kit": "^3.18.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "next": "^16.1.6",
    "pg": "^8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "resend": "^6.9.1",
    "sanitize-html": "^2.17.0",
    "stripe": "^20.3.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2.16.0",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "lightningcss": "^1.31.1",
    "prettier": "^3.2.5",
    "prisma": "^7.3.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
